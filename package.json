{
  "name": "embedinginterface",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:python": "pyinstaller --onefile app.py",
    "build:electron": "electron-builder --win",
    "build": "npm run build:python && npm run build:electron"
  },
  "build": {
    "appId": "com.votre.app",
    "productName": "EmbedingInterface2.0",
    "files": [
      "**/*",
      "static/**/*",
      "templates/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "extraFiles": [
      {
        "from": "dist/app.exe",
        "to": "resources/app.exe"
      }
    ],
    "asar": false,
    "win": {
      "target": "nsis",
      "icon": "static/anniviers.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "static/anniviers.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "static/anniviers.png"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EpineyFlorent/EmbedingInterface.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EpineyFlorent/EmbedingInterface/issues"
  },
  "homepage": "https://github.com/EpineyFlorent/EmbedingInterface#readme",
  "description": "",
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  }
}
